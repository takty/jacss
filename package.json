{
	"name": "klales",
	"version": "1.0.0",
	"description": "A Class-Less CSS Library",
	"license": "MIT",
	"author": "Takuto Yanagida",
	"homepage": "https://github.com/takty/klales#readme",
	"keywords": [
		"css",
		"html",
		"style"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/takty/klales.git"
	},
	"bugs": {
		"url": "https://github.com/takty/klales/issues"
	},
	"browserslist": "> 0.5%, last 2 versions, not dead",
	"scripts": {
		"build": "parcel build src/klales.css --no-source-maps --dist-dir ./",
		"docs": "parcel build src/_docs/*.html --dist-dir docs --public-url /klales/",
		"dev": "parcel src/_docs/*.html --dist-dir dev"
	},
	"@parcel/transformer-css": {
		"drafts": {
			"nesting": true
		}
	},
	"devDependencies": {
		"parcel": "^2.11.0",
		"stylelint": "^16.2.1",
		"stylelint-config-standard": "^36.0.0"
	}
}
